// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String?   @unique
  emailVerified      DateTime?
  image              String?
  role               Role      @default(PLAYER)
  phoneNumber        String?
  teamId             String?
  accounts           Account[]
  sessions           Session[]
  team               Team?     @relation("TeamMembers", fields: [teamId], references: [id])
  bookings           Booking[] @relation("PlayerBookings")
  coachedBookings    Booking[] @relation("CoachBookings")
  availabilitySlots  AvailabilitySlot[]
  managedTeams       Team[]    @relation("TeamCoach")
  bookingBlocks      BookingBlock[]
  sokazId            String?
  sokazTeam          String?
  sokazStats         String?
  createdAt          DateTime  @default(now())
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models
enum Role {
  PLAYER
  COACH
  ADMIN
}

model Team {
  id          String   @id @default(cuid())
  name        String
  coachId     String
  inviteCode  String   @unique @default(cuid())
  coach       User     @relation("TeamCoach", fields: [coachId], references: [id])
  members     User[]   @relation("TeamMembers")
  createdAt   DateTime @default(now())
}

model AvailabilitySlot {
  id                  String   @id @default(cuid())
  coachId             String
  dayOfWeek           Int      // 0-6 (0=Nedjelja, 1=Ponedjeljak)
  startTime           String   // "17:00"
  endTime             String   // "21:00"
  slotDurationMinutes Int      @default(60)
  isActive            Boolean  @default(true)
  coach               User     @relation(fields: [coachId], references: [id])
}

model Booking {
  id            String   @id @default(cuid())
  userId        String
  coachId       String
  startDateTime DateTime
  endDateTime   DateTime
  status        BookingStatus @default(CONFIRMED)
  price         Float?   @default(0)
  notes         String?
  reminderSent  Boolean  @default(false)
  createdAt     DateTime @default(now())
  
  user          User     @relation("PlayerBookings", fields: [userId], references: [id])
  coach         User     @relation("CoachBookings", fields: [coachId], references: [id])
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  PENDING
  BLOCKED
  COMPLETED
}

model BookingBlock {
  id            String   @id @default(cuid())
  coachId       String
  startDateTime DateTime
  endDateTime   DateTime
  reason        String?
  coach         User     @relation(fields: [coachId], references: [id])
}
