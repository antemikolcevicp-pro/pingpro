generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
  engineType    = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                String             @id @default(cuid())
  name              String?
  email             String?            @unique
  emailVerified     DateTime?
  image             String?
  role              Role               @default(PLAYER)
  phoneNumber       String?
  teamId            String?
  createdAt         DateTime           @default(now())
  sokazId           String?
  sokazStats        String?
  sokazTeam         String?
  sokazLiga         String?
  accounts          Account[]
  availabilitySlots AvailabilitySlot[]
  coachedBookings   Booking[]          @relation("CoachBookings")
  bookings          Booking[]          @relation("PlayerBookings")
  bookingBlocks     BookingBlock[]
  sessions          Session[]
  managedTeams      Team[]             @relation("TeamCoach")
  team              Team?              @relation("TeamMembers", fields: [teamId], references: [id])
  conversations     Conversation[]     @relation("UserConversations")
  messages          Message[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Team {
  id         String   @id @default(cuid())
  name       String
  coachId    String
  inviteCode String   @unique @default(cuid())
  league     String?
  createdAt  DateTime @default(now())
  coach      User     @relation("TeamCoach", fields: [coachId], references: [id], onDelete: Cascade)
  members    User[]   @relation("TeamMembers")
}

model Location {
  id                String             @id @default(cuid())
  name              String
  address           String?
  totalTables       Int                @default(1)
  isActive          Boolean            @default(true)
  createdAt         DateTime           @default(now())
  availabilitySlots AvailabilitySlot[]
  bookings          Booking[]
  bookingBlocks     BookingBlock[]
}

model AvailabilitySlot {
  id                  String    @id @default(cuid())
  coachId             String?
  dayOfWeek           Int
  startTime           String
  endTime             String
  slotDurationMinutes Int       @default(60)
  isActive            Boolean   @default(true)
  locationId          String?
  coach               User?     @relation(fields: [coachId], references: [id], onDelete: Cascade)
  location            Location? @relation(fields: [locationId], references: [id])
}

model Booking {
  id               String        @id @default(cuid())
  userId           String?
  coachId          String?
  startDateTime    DateTime
  endDateTime      DateTime
  status           BookingStatus @default(CONFIRMED)
  price            Float?        @default(0)
  notes            String?
  reminderSent     Boolean       @default(false)
  createdAt        DateTime      @default(now())
  locationId       String?
  participantCount Int?          @default(1)
  tableCount       Int?          @default(1)
  coach            User?         @relation("CoachBookings", fields: [coachId], references: [id], onDelete: SetNull)
  location         Location?     @relation(fields: [locationId], references: [id])
  user             User?         @relation("PlayerBookings", fields: [userId], references: [id], onDelete: SetNull)
}

model BookingBlock {
  id            String    @id @default(cuid())
  coachId       String?
  startDateTime DateTime
  endDateTime   DateTime
  reason        String?
  locationId    String?
  coach         User?     @relation(fields: [coachId], references: [id])
  location      Location? @relation(fields: [locationId], references: [id])
}

enum Role {
  PLAYER
  COACH
  ADMIN
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  PENDING
  BLOCKED
  COMPLETED
  HALL_ONLY
}

model Conversation {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  messages  Message[]
  users     User[]    @relation("UserConversations")
}

model Message {
  id             String       @id @default(cuid())
  text           String
  image          String?
  createdAt      DateTime     @default(now())

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId       String
  sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  isSeen         Boolean      @default(false)
}
